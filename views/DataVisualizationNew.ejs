<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Visualization</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/apexcharts@latest/dist/apexcharts.min.js"></script>
    
</head>

<body class="bg-gray-100">
    <%- include('partials/navbar.ejs'); %>

    <!-- Dropdown for campaign selection -->
    <div class="mx-auto p-4">
        <label for="campaign-select" class="block text-gray-700 mb-2">Select Campaign:</label>
        <select id="campaign-select" class="form-select bg-white border border-gray-300 rounded-md p-2">
            <option value="">-- Select a Campaign --</option>
        </select>
    </div>

    <!-- Containers for radial bar charts -->
    <div class="mx-auto p-2">
        <!-- Grid for radial charts -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-4 mb-4">
            <!-- <div id="radial-chart-2" class="border border-2 border-gray-500 rounded-md bg-white"></div> -->
            <div id="radial-chart-3" class="border border-2 border-gray-500 rounded-md bg-white"></div>
            <div id="reported-spam-chart" class="border border-2 border-gray-500 rounded-md bg-white"></div>
        </div>
        <!-- Container for reported spam pie chart -->
        <div class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-2 gap-4 mb-4">
           
            <div id="user-activity-chart" class="border border-2 border-gray-500 rounded-md bg-white"></div>
            <div class="border border-2 border-gray-500 rounded-md bg-white p-4">
                <h2 class="text-lg font-semibold mb-4">User Actions Overview</h2>
                <div id="userActionsContainer" class="overflow-y-scroll" style="max-height: 300px"></div>
            </div>
        </div>

       
    </div>

    <!-- Import the script with type="module" -->
    <script type="module" src="apexChartsCustom.js"></script>
</body>

</html>
